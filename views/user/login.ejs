<%layout('/layouts/boilerplate')%>


<div class="row signup mt-3 ">
    
       <div class="col-7 offset-3">
        <h1>Login </h1>
              <form method="POST" action="/login" class="needs-validation" novalidate>
                  <div class="mb-3">
                      <label for="username" class="form-label">Username</label> 
                      <input type="text" name="username" placeholder="enter username" id="username" class="form-control" required>
                     
                     
                   </div>
                  
                 <div class="mb-3">
                    <label for="password" class="form-label">Password</label> 
                    <input type="password" name="password" placeholder="enter password" id="password" class="form-control" required>
                  
                   
                 </div>
                 <button class="btn btn-success">Login</button>
              </form>
       </div>
</div>
